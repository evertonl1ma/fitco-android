<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="actionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/orange_button</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.NoActionBarParent"></style>

    <style name="AppTheme.NoActionBarParent" parent="AppTheme">
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">@color/gray_color</item>
        <item name="actionBarTheme">@style/actionBarStyle</item>
    </style>

    <style name="AppTheme.NoActionBarSplash" parent="AppTheme">
        <item name="colorPrimaryDark">@color/green</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.ActionBarGreen" parent="AppTheme">
        <item name="colorPrimaryDark">@color/green</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.ActionBarGray" parent="AppTheme">
        <item name="colorPrimaryDark">@color/gray_bar</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppTheme.NoActionBarVini2" parent="AppTheme">
        <item name="colorPrimaryDark">@color/green</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="AppTheme.AppBar2" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="chat_text_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorLink">@android:color/black</item>

    </style>

    <style name="chat_timings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--<style name="NavigationText" parent="@android:style/TextAppearance.Medium">-->
    <!--<item name="android:textSize">16sp</item>-->
    <!--<item name="android:fontFamily">@font/font_regular</item>-->
    <!--</style>-->

    <style name="AppTheme.WhiteTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
